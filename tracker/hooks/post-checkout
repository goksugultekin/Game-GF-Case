#!/bin/sh
#
# POST-CHECKOUT HOOK
# ==================
# Bu hook repo clone edildiginde veya branch degistiginde calisir.
# Baslangic zamanini kaydeder.
#

# Tracker dizinine git
SCRIPT_DIR="$(dirname "$0")"
TRACKER_DIR="$SCRIPT_DIR/../../tracker"

# Node.js ile calistir
if command -v node &> /dev/null; then
    node "$TRACKER_DIR/index.js" record "checkout_$(date +%Y%m%d_%H%M%S)"
fi

exit 0
